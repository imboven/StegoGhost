# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyw text eol=lf
*.pyx text eol=lf
*.pxd text eol=lf
*.pxi text eol=lf

# Config files
*.cfg text eol=lf
*.ini text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf

# Documentation
*.md text eol=lf
*.rst text eol=lf
*.txt text eol=lf
LICENSE text eol=lf

# Web files
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows batch files
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.exe binary
*.dll binary
*.so binary
*.dylib binary

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.bmp binary
*.tiff binary
*.webp binary
*.svg text eol=lf

# Archives
*.zip binary
*.tar binary
*.gz binary
*.7z binary
*.rar binary

# Font files
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary
*.eot binary

# Audio/Video
*.mp3 binary
*.mp4 binary
*.avi binary
*.wav binary
*.flac binary

# Exclude from GitHub's language statistics
*.spec linguist-vendored
build.py linguist-vendored
installer.iss linguist-vendored 